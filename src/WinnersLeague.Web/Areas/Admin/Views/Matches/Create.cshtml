@using WinnersLeague.Models.Enums;
@model WinnersLeague.Web.Areas.Admin.Models.MatchInputModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>MatchInputModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Admin" asp-controller="Matches" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HomeTeam" class="control-label"></label>
                <select asp-for="HomeTeam" class="form-control">
                    <option disabled="disabled" selected="selected">-- Choose Team --</option>
                    @foreach (var name in ViewData["Teams"] as IList<string>)
                    {
                        <option>@name</option>
                    }
                </select>
                <span asp-validation-for="HomeTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeam" class="control-label"></label>
                <select asp-for="AwayTeam" class="form-control">
                    <option disabled="disabled" selected="selected">-- Choose Team --</option>
                    @foreach (var name in ViewData["Teams"] as IList<string>)
                    {
                        <option>@name</option>
                    }
                </select>
                <span asp-validation-for="AwayTeam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="League" class="control-label"></label>
                <input asp-for="League" class="form-control" />
                <span asp-validation-for="League" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OurBetSuggestion" class="control-label"></label>
                <select asp-for="OurBetSuggestion" asp-items="Html.GetEnumSelectList<OddType>()" class="form-control">
                    <option disabled="disabled" selected="selected">-- Choose Suggestion --</option>
                </select>
                <span asp-validation-for="OurBetSuggestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatchStart" class="control-label"></label>
                <input asp-for="MatchStart" class="form-control" />
                <span asp-validation-for="MatchStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeScore" class="control-label"></label>
                <input asp-for="HomeScore" value="0" class="form-control" />
                <span asp-validation-for="HomeScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayScore" class="control-label"></label>
                <input asp-for="AwayScore" value="0" class="form-control" />
                <span asp-validation-for="AwayScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<MatchStatus>()" class="form-control">
                    <option disabled="disabled" selected="selected">-- Choose Status --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<MatchType>()" class="form-control">
                    <option disabled="disabled" selected="selected">-- Choose Type --</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

