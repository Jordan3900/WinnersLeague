@model IEnumerable<MatchViewModel>

@{
    ViewData["Title"] = "All";
}

<h2 class="text-center">All Matches</h2>

@foreach (var match in Model)
{
    <div class="row  d-flex justify-content-center mt-3">
        <div class="card text-center col-lg-8">
            <div class="card-header">
                @match.MatchStart
            </div>
            <div class="card-body  d-flex justify-content-around">
                <div class="col-lg-4">
                    <h4>@match.HomeTeam.Name</h4>
                    <a asp-controller="Teams" asp-action="Details" asp-route-id="@match.HomeTeam.Id">
                        <img src="@Url.Content(match.HomeTeam.Logo)" alt="Home-Team-Picture" width='47' height='47' />
                    </a>
                </div>
                @if (match.Status == MatchStatus.Finished)
                {
                    <div class="col align-self-center">
                        <h1>@match.HomeScore - @match.AwayScore</h1>
                    </div>

                }
                else
                {
                    <div class="col align-self-center">
                        <a asp-controller="Matches" asp-action="Details" asp-route-id="@match.Id">
                            <img src="~/Images/img_418591.png" class="img-responsive" alt="VS" width='74' height='74' />
                        </a>
                    </div>
                }
                <div class="col-lg-4">
                    <h4>@match.AwayTeam.Name</h4>
                    <a asp-controller="Teams" asp-action="Details" asp-route-id="@match.AwayTeam.Id">
                        <img src="@Url.Content(match.AwayTeam.Logo)" alt="Away-Team-Picture" width='47' height='47' />
                    </a>
                </div>
            </div>
        </div>
    </div>
}
