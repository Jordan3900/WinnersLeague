@model League

@{
    ViewData["Title"] = "LeagueList";
    var counter = 0;
}

<h2>Premier League</h2>

<table class="table table-hover table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Logo</th>
            <th scope="col">Name</th>
            <th scope="col">Wins</th>
            <th scope="col">Draws</th>
            <th scope="col">Loses</th>
            <th scope="col">Points</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model.Teams.OrderByDescending(x => x.Points).ToList())
        {
            counter++;
                <tr >
                    <th scope="row">@counter</th>
                    <td><img src="@Url.Content(team.Logo)" width="24" height="24" alt="Logo" /></td>
                    <td><a class="text-white" asp-controller="Teams" asp-action="Details" asp-route-id="@team.Id">@team.Name</a></td>
                    <td>@team.Wins</td>
                    <td>@team.Draws</td>
                    <td>@team.Losses</td>
                    <td>@team.Points</td>

                </tr>
        }
</table>