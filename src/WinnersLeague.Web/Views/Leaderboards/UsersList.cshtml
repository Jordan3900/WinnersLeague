@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users List";
    var counter = 0;
}

<h2>Users Leaderboard</h2>

<table class="table table-hover table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Full Name</th>
            <th scope="col">Win Stats</th>
            <th scope="col">Points</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            counter++;
            if (this.User.Identity.Name == user.UserName)
            {
                <tr class="bg-warning">
                    <th scope="row">@counter</th>
                    <td>@user.UserName</td>
                    <td>@user.FullName</td>
                    <td>@user.WinStats</td>
                    <td>@user.Points</td>
                </tr>
            }
            else
            {
                <tr class="">
                    <th scope="row">@counter</th>
                    <td>@user.UserName</td>
                    <td>@user.FullName</td>
                    <td>@user.WinStats</td>
                    <td>@user.Points</td>
                </tr>
            }
        }
</table>